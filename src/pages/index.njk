{% extends "layout.njk" %}
{% import 'partials/_skill.njk' as skillPartial %}

{% block content %}
<h1 class="title">{{ name }} <small class="text-muted">( {{ born }} )</small></h1>
<p class="text">{{ details }}</p>
<div class="input-group mb-3">
  <span class="input-group-text" id="skill-filter-describer">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
      <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
    </svg>
  </span>
  <input id="skill-filter" type="text" class="form-control" placeholder="Digite uma palavra chave para filtar" aria-label="Filtro de habilidades" aria-describedby="skill-filter-describer">
  <button id="clear-filter"class="btn btn-outline-secondary" title="limpar filtro">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
      <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
      <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
    </svg>
  </button>
</div>
<div id="habilities" class="skill-list row row-cols-1 row-cols-lg-3 g-3">
  {% for type, skills in skills | groupby( "type" ) %}
    {% for skill in skills %}
      {{ skillPartial.renderSkill( skill, type ) }}
    {% endfor %}
  {% endfor %}
</div>
{% endblock %}
