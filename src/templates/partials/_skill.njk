{% macro renderSkill( skill, type ) %}
{% if skill %}
<div class="card">
  <h5 class="card-header">{{ type | title }}</h5>
  <div class="card-body">
    {% if skill.title %}<h5 class="card-title">{{ skill.title }}</h5>{% endif %}
    {% if skill.details %}<p class="card-text">{{ skill.details }}</p>{% endif %}

    {% if skill.begin %}
    {% set today          = 2021 %}
    {% set percentage     = ( ( skill.end ) - skill.begin ) / ( today - skill.begin ) * 100 %}
    <div class="progress">
      <div class="progress-bar progress-bar-striped" role="progressbar" style="width:{{percentage}}%" aria-valuenow="{{percentage}}"></div>
    </div>
    {% endif %}
  </div>
</div>
{% endif %}
{% endmacro %}
